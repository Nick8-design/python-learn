<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/navyb"
    tools:context=".Lessons.basic.Introduction">

    <include layout="@layout/return_topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/intrott"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Python!"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Python is a high-level, interpreted programming language known for its simplicity, readability, and versatility."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Features of Python"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t1. Simple and Readable Syntax.\n\t2. Interpreted Language.\n\t3. Dynamically Typed.\n\t4. Extensive Standard Library.\n\t5. Cross-Platform."
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/rounddark">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/settings"
                    android:layout_gravity="center"
                    android:layout_margin="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIP! Python's syntax is clean and easy to understand, making it a great choice for beginners."
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_margin="4dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Common Uses of Python"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t1. Web Development.\n\t2. Data Science and Machine Learning.\n\t3. Scripting and Automation.\n\t4. Software Development.\n\t5. Scientific Computing."
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="4dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The in build compiler allows you to run some scripts and in most of the example in this App In am going to use it ,but if you have a PC or an interpreter that has alot of python libraries well and good i advice you to use it .\nLet me show you how this in build compiler work ,you can open it directily or by using try it out button.\nClick Try it out and see how it works"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="4dp" />
            <include layout="@layout/bottonadd"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <io.github.rosemoe.sora.widget.CodeEditor
                    android:id="@+id/out1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:text='print("Hello, World! \u2764")'
                    android:layout_margin="5dp"
                    android:background="#EFEFEF"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tryit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Try it out"
                    android:textColor="@color/white"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="@drawable/rounddark"
                    android:layout_gravity="end"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="\nYou can code python on this app with the in build compiler it have few library for the purpose of light weight in fure this seems to be differnt on the next version ,We also intend to add online compiler in the next version of this app.\n\n\n\n"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
