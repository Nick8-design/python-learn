<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/navyb"
    tools:context=".Lessons.numpy.NumpySearch">

    <include layout="@layout/return_topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:paddingBottom="150dp">

            <TextView
                android:id="@+id/intrott"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Searching in NumPy Arrays"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NumPy provides several functions to search and find elements in arrays. These include `np.where()`, `np.searchsorted()`, and `np.nonzero()`. Each function has its specific use case."
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Using `np.where()`:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:textStyle="bold" />

            <io.github.rosemoe.sora.widget.CodeEditor
                android:id="@+id/codeEditor1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                app:editorEnableLineNumber="true"
                app:editorNonPrintableGlyph="true"
                app:editorTextSize="17sp"
                tools:text='import numpy as np\n\narr = np.array([1, 2, 3, 4, 5])\nresult = np.where(arr > 3)\nprint(result)' />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example Output:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp" />

            <io.github.rosemoe.sora.widget.CodeEditor
                android:id="@+id/codeEditor2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                app:editorEnableLineNumber="false"
                app:editorNonPrintableGlyph="true"
                app:editorTextSize="17sp"
                tools:text='(array([3, 4]),)' />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Using `np.searchsorted()`:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:textStyle="bold" />

            <io.github.rosemoe.sora.widget.CodeEditor
                android:id="@+id/codeEditor3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                app:editorEnableLineNumber="true"
                app:editorNonPrintableGlyph="true"
                app:editorTextSize="17sp"
                tools:text='import numpy as np\n\narr = np.array([1, 3, 5, 7])\nindex = np.searchsorted(arr, 4)\nprint(index)' />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example Output:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp" />

            <io.github.rosemoe.sora.widget.CodeEditor
                android:id="@+id/codeEditor4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                app:editorEnableLineNumber="false"
                app:editorNonPrintableGlyph="true"
                app:editorTextSize="17sp"
                tools:text='2' />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Using `np.nonzero()`:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:textStyle="bold" />

            <io.github.rosemoe.sora.widget.CodeEditor
                android:id="@+id/codeEditor5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                app:editorEnableLineNumber="true"
                app:editorNonPrintableGlyph="true"
                app:editorTextSize="17sp"
                tools:text='import numpy as np\n\narr = np.array([0, 1, 0, 1])\nresult = np.nonzero(arr)\nprint(result)' />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example Output:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="4dp" />

            <io.github.rosemoe.sora.widget.CodeEditor
                android:id="@+id/codeEditor6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                app:editorEnableLineNumber="false"
                app:editorNonPrintableGlyph="true"
                app:editorTextSize="17sp"
                tools:text='(array([1, 3]),)' />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
