<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wf"
    android:orientation="vertical"

    >

<include layout="@layout/top_bar"
   />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_unselected"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/percentag"
            android:layout_width="0dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/octagonal"
            android:text="0%">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:id="@+id/covpas"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
        android:text="Covered in Percentage">

        </TextView>
        <TextView
            android:id="@+id/percentage"
            android:layout_width="0dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/octagonal"
            android:text="0%">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="start|top"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learning Progress "
                        android:textColor="@color/alice"

                        >

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"

                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Topic "
                            android:textColor="@color/black"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/topicname"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="Welcome to python start learning"
                            android:textColor="@color/maziwa"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:scrollHorizontally="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Topic number"
                            android:textColor="@color/black">

                        </TextView>

                        <TextView

                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:id="@+id/topicno"
                            android:text="One"
                            android:textColor="@color/maziwa"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:scrollHorizontally="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/ts"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Strand"
                        android:textColor="@color/black"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/strand"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textColor="@color/maziwa"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        >

                    </TextView>
                </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2"

                    >
                <LinearLayout
                    android:id="@+id/compiler_btn"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:gravity="center"

                    >
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:background="@drawable/utop"
                        android:layout_gravity="center"

                        >

                    </TextView>
                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/compy"

                        >

                    </ImageView>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ubottom"
                        android:gravity="center"
                        android:text="Compiler"
                        android:textColor="@color/black"
                        android:elevation="10dp"

                        >

                    </TextView>


                </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="2"
            android:scaleType="fitCenter"

            android:src="@drawable/p">

        </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/projectsbtn"
                android:layout_weight="1"
                android:gravity="center"

                >
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:background="@drawable/utop"
                    android:layout_gravity="center"
                    android:id="@+id/utop"
                    >

                </TextView>
                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/proj"
                    android:id="@+id/swi_img"
                    >

                </ImageView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ubottom"
                    android:gravity="center"
                    android:text="Projects"
                    android:textColor="@color/black"
                    android:elevation="10dp"
                    android:id="@+id/comp"
                    >

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:id="@+id/swi"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:background="@drawable/utop"

                    android:id="@+id/uswi"
                    >

                </TextView>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/les"
                    android:id="@+id/cont_img"
                    >

                </ImageView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ubottom"
                    android:gravity="center"
                    android:text="Online"
                    android:textColor="@color/black"
                    android:elevation="10dp"
                    android:id="@+id/lswi"

                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/continuel"
                android:padding="8dp"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:background="@drawable/utop"

                    android:id="@+id/ucon"
                    >

                </TextView>
                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cont"
                    android:id="@+id/compi"
                    >

                </ImageView>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ubottom"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:textColor="@color/black"
                    android:text="Continue"
                    android:id="@+id/cont"
                    >

                </TextView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/bottom_bar"/>
</LinearLayout>