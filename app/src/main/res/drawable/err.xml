<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/yellow"/>
        </shape>
    </item>
    <item>
        <rotate android:angle="90">
            <shape>
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="2dp"
                    android:color="@color/yellow"/>
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:angle="-90">
            <shape>
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="2dp"
                    android:color="@color/yellow" />
            </shape>
        </rotate>
    </item>
</layer-list>
