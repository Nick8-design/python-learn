<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#306998"
            android:endColor="#FFD43B"
            android:angle="90" />
        </shape>
    </item>


    <item>
        <shape android:shape="oval">
            <size
                android:width="150dp"
                android:height="150dp" />
            <solid android:color="#FFE873" />
            <stroke
                android:width="2dp"
                android:color="#4B8BBE" />
        </shape>
    </item>

</layer-list>
